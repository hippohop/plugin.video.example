<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.hrochcinema"
       version="0.1.0"
       name="Hroch Cinema"
       provider-name="HrochGPT">
  <requires>
    <import addon="xbmc.python" version="3.0.1"/>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.jurialmunkey" version="0.2.28"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="cs">Hroch Cinema – přehrávání z Webshare</summary>
    <description lang="cs">
      Doplněk pro Kodi, který umožňuje vyhledávání filmů a seriálů z TMDb a jejich přehrávání z veřejně dostupných releasů na Webshare.
      Nabízí výběr kvality, podporu češtiny, historii přehrávání a oblíbené položky.
    </description>
    <disclaimer lang="cs">Doplněk zprostředkovává veřejně sdílený obsah z úložiště Webshare a neukládá žádná data.</disclaimer>
    <license>GPL-3.0-only</license>
    <assets>
      <icon>resources/images/icon.png</icon>
      <fanart>resources/images/fanart.jpg</fanart>
      <screenshot>resources/images/screenshot-1.jpg</screenshot>
      <screenshot>resources/images/screenshot-2.jpg</screenshot>
    </assets>
    <news>První verze – integrace TMDb a Webshare vyhledávání</news>
  </extension>
</addon>
